<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Theme.AppCompat.Light.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="SearchViewTheme" >
        <item name="android:textSize">@dimen/font_xxxsmall</item>
        <item name="colorControlActivated">#efefef</item>
        <item name="colorControlNormal">#efefef</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:editTextColor">#707070</item>
    </style>

</resources>
